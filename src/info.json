{
  "identifier": "chatglm.plugins.translate",
  "version": "1.2.2",
  "category": "translate",
  "name": "智普翻译",
  "summary": "智普清言翻译插件",
  "icon": "",
  "author": "玄晓生",
  "homepage": "https://github.com/lxlhlp/bob-plugin-chatglm-translate",
  "appcast": "https://raw.githubusercontent.com/lxlhlp/bob-plugin-chatglm-translate/refs/heads/main/appcast.json",
  "minBobVersion": "0.0.1",
  "options": [
    {
      "identifier": "APIkey",
      "type": "text",
      "title": "API密钥"
    },
    {
      "identifier": "model",
      "type": "menu",
      "title": "语言模型",
      "defaultValue": "GLM-4-Flash",
      "menuValues": [
        {
          "title": "高智能旗舰[GLM-4-Plus]",
          "value": "GLM-4-Plus"
        },
        {
          "title": "超长输入[GLM-4-Long]",
          "value": "GLM-4-Long"
        },
        {
          "title": "极速推理[GLM-4-AirX]",
          "value": "GLM-4-AirX"
        },
        {
          "title": "高性价比[GLM-4-Air]",
          "value": "GLM-4-Air"
        },
        {
          "title": "免费调用[GLM-4-Flash]",
          "value": "GLM-4-Flash"
        },
        {
          "title": "高速低价[GLM-4-FlashX]",
          "value": "GLM-4-FlashX"
        },
        {
          "title": "Agent模型[GLM-4-AllTools]",
          "value": "GLM-4-AllTools"
        },
        {
          "title": "旧版旗舰[GLM-4]",
          "value": "GLM-4"
        }
      ]
    },
    {
      "identifier": "prompt",
      "type": "text",
      "title": "翻译提示词",
      "defaultValue": "",
      "textConfig": {
        "type": "visible",
        "height": 80,
        "placeholderText": "默认情况下无需填写,如果你对翻译结果不满意,有更好的提示词idea,请在这里填写覆盖默认提示词;关键字[目标语言],[原文语言],实际使用时会自动替换为对应值,例如:中文,英文",
        "keyWords": ["原文语言", "目标语言"]
      }
    },
    {
      "identifier": "web_search",
      "type": "menu",
      "title": "是否启用web搜索",
      "defaultValue": "false",
      "menuValues": [
        {
          "title": "是",
          "value": "true"
        },
        {
          "title": "否",
          "value": "false"
        }
      ]
    }
  ]
}
